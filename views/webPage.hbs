<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/styles.css" />
    <title>Web Page</title>
  </head>
  <body>
    <div class="webPage-container">
      <h1>Shops</h1>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Rating</th>
          </tr>
        </thead>
        <tbody>
          {{#each shops}}
            <tr>
              <td><a href="/shop-details/{{id}}">{{name}}</a></td>
              <td>{{rating}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="backhome">
        <a class="backToHomepage" href="/back-to-homepage">Back to homepage</a>
      </div>
    </div>
  </body>

</html>